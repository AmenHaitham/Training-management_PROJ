<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">

    <display-name>Training Management System</display-name>

    <!-- Welcome File List -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

    <!-- Error Pages -->
    <error-page>
        <error-code>404</error-code>
        <location>/WEB-INF/views/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/WEB-INF/views/error/500.jsp</location>
    </error-page>

    <!-- Session Configuration -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>

    <!-- Security Constraints -->
    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Protected Resources</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
            <url-pattern>/training-programs/*</url-pattern>
            <url-pattern>/courses/*</url-pattern>
            <url-pattern>/sessions/*</url-pattern>
            <url-pattern>/materials/*</url-pattern>
            <url-pattern>/assessments/*</url-pattern>
            <url-pattern>/users/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>ADMIN</role-name>
            <role-name>TRAINER</role-name>
        </auth-constraint>
    </security-constraint>

    <!-- Security Roles -->
    <security-role>
        <role-name>ADMIN</role-name>
    </security-role>
    <security-role>
        <role-name>TRAINER</role-name>
    </security-role>
    <security-role>
        <role-name>TRAINEE</role-name>
    </security-role>

    <!-- Character Encoding Filter -->
    <filter>
        <filter-name>CharacterEncodingFilter</filter-name>
        <filter-class>com.training.filter.CharacterEncodingFilter</filter-class>
        <init-param>
            <param-name>encoding</param-name>
            <param-value>UTF-8</param-value>
        </init-param>
    </filter>
    <filter-mapping>
        <filter-name>CharacterEncodingFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Authentication Filter -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.training.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <!-- Training Program Servlet -->
    <servlet>
        <servlet-name>TrainingProgramServlet</servlet-name>
        <servlet-class>com.training.servlet.TrainingProgramServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>TrainingProgramServlet</servlet-name>
        <url-pattern>/training-programs/*</url-pattern>
    </servlet-mapping>

    <!-- Course Servlet -->
    <servlet>
        <servlet-name>CourseServlet</servlet-name>
        <servlet-class>com.training.servlet.CourseServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CourseServlet</servlet-name>
        <url-pattern>/courses/*</url-pattern>
    </servlet-mapping>

    <!-- Session Servlet -->
    <servlet>
        <servlet-name>SessionServlet</servlet-name>
        <servlet-class>com.training.servlet.SessionServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SessionServlet</servlet-name>
        <url-pattern>/sessions/*</url-pattern>
    </servlet-mapping>

    <!-- Material Servlet -->
    <servlet>
        <servlet-name>MaterialServlet</servlet-name>
        <servlet-class>com.training.servlet.MaterialServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MaterialServlet</servlet-name>
        <url-pattern>/materials/*</url-pattern>
    </servlet-mapping>

    <!-- Assessment Servlet -->
    <servlet>
        <servlet-name>AssessmentServlet</servlet-name>
        <servlet-class>com.training.servlet.AssessmentServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>AssessmentServlet</servlet-name>
        <url-pattern>/assessments/*</url-pattern>
    </servlet-mapping>

    <!-- User Servlet -->
    <servlet>
        <servlet-name>UserServlet</servlet-name>
        <servlet-class>com.training.servlet.UserServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UserServlet</servlet-name>
        <url-pattern>/users/*</url-pattern>
    </servlet-mapping>

    <!-- Login Servlet -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.training.servlet.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

</web-app> 